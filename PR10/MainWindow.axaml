<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:notice="clr-namespace:Mysqlx.Notice;assembly=MySql.Data"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PR10.MainWindow"
        Title="PR10">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
       
        <Grid Grid.Row="0" Background="LightCyan">
            <Image Source="Images/clown.png" HorizontalAlignment="Left"></Image>
            <TextBlock  Name="Block" Text="Добро пожаловать" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Light"></TextBlock>
        </Grid>
        <Grid Grid.Row="2" Background="LightCyan"></Grid>
        <Panel Grid.Row="1" Name="MainPanel">
            <Button Name="ProductsBtn" Content="Товары" HorizontalAlignment="Center" Background="LightCyan" BorderBrush="Black" Width="100" Height="45" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" FontWeight="Light" Click="ProductsBtn_OnClick"></Button>
        </Panel>
    </Grid>
</Window>
